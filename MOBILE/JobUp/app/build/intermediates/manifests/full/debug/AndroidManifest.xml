<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.br.jobup"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="25" />

    <!-- To auto-complete the login text field in the usuarioSignIn form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.1" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/applogojobup"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.br.jobup.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.br.jobup.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme" />
        <activity
            android:name="trash.ApresentacaoActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.br.jobup.SingInActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.br.jobup.CadastroActivity"
            android:label="@string/title_activity_cadastro" />
        <activity
            android:name="com.br.jobup.SignUpActivity"
            android:label="Cadastro" />
        <activity
            android:name="com.br.jobup.ApresentacaoActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/Splashscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            />
        </activity>
        <activity
            android:name="com.br.jobup.MensagensActivity"
            android:label="@string/title_activity_mensagem" />
        <activity
            android:name="com.br.jobup.DetalheServicoActivity"
            android:label="@string/title_activity_confirmacao" />
        <activity android:name="com.br.jobup.ListUsuarioActivity" />
        <activity android:name="com.br.jobup.ListaNovaDeUsuariosActivity" />
    </application>

</manifest>