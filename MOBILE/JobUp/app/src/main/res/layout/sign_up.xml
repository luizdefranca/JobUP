<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:background="#D7CCC8">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Crie sua conta na JobUP"
                android:id="@+id/textView2"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:textAlignment="center"
                android:textColor="#333" />

            <EditText
                android:id="@+id/usernameTxt2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="50dp"
                android:hint="Nome do usuario"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="#111"
                android:textSize="12sp"/>

            <EditText
                android:id="@+id/emailTxt2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:hint="Email"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="#111"
                android:textSize="12sp"/>

            <EditText
                android:id="@+id/passwordTxt2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/usernameTxt2"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:hint="Senha"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="#111"
                android:textSize="12sp"/>

            <EditText
                android:id="@+id/rewritePassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/passwordTxt2"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:hint="type your full name"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="#111"
                android:textSize="12sp"/>


            <Button
                android:id="@+id/signUpButt2"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/rewritePassword"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:background="#FFF6E657"
                android:text="Cadastre-se"
                android:textColor="#111"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/touButt"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/signUpButt2"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:background="#f2f2f2"
                android:text="Termos de Uso"
                android:textColor="#111"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>



</RelativeLayout>
