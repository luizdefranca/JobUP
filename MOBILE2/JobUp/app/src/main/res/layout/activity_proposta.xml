<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Proposta"
                android:layout_marginTop="16dp"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Título *" />

            <EditText
                android:id="@+id/proposta_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="textCapWords" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data"
                android:inputType="date"/>

            <EditText
                android:id="@+id/dataProposta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duração do Serviço" />

            <Spinner
                android:id="@+id/spnDuracaoServico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:imeOptions="actionDone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valor Proposta" />

            <EditText
                android:id="@+id/valor_proposta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Justificativa" />

            <EditText
                android:id="@+id/proposta_justificativa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="text" />

            <Button
                android:id="@+id/enviar_proposta"
                android:layout_width="match_parent"
                android:background="#1e49d6"
                android:textColor="#ffffff"
                android:text="Enviar Proposta"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_marginTop="5dp"
                android:id="@+id/contratacao_servico_recusar"
                android:layout_width="match_parent"
                android:text="Recusar Proposta"
                android:textColor="#ffffff"
                android:background="#d61e1e"
                android:layout_height="wrap_content"/>
        </LinearLayout>



</LinearLayout>
