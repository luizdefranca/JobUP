<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.br.jobup">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />

    <application
        android:allowBackup="true"

        android:icon="@drawable/applogojobup"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="br.com.workup.jobup.views.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="br.com.workup.jobup.views.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme" />
        <activity
            android:name="br.com.workup.jobup.views.ApresentacaoActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.workup.jobup.views.CadastroActivity"
            android:label="@string/title_activity_cadastro" />
        <activity
            android:name="br.com.workup.jobup.views.AgendamentoActivity"
            android:label="@string/title_activity_agendamento" />
        <activity
            android:name="br.com.workup.jobup.views.MensagensActivity"
            android:label="@string/title_activity_mensagem" />
        <activity
            android:name="br.com.workup.jobup.views.DetalheServicoActivity"
            android:label="@string/title_activity_confirmacao" />
        <activity android:name="br.com.workup.jobup.usuario.UsuarioActivity"
            android:label="@string/title_activity_cad_usuario"
            android:theme="@style/AppTheme"></activity>
        <activity android:name="br.com.workup.jobup.usuario.UsuarioDetalheActivity"></activity>
        <service
            android:name="br.com.workup.jobup.usuario.UsuarioIntentService"
            android:exported="false" />
        <provider
            android:name="br.com.workup.jobup.usuario.UsuarioProvider"
            android:authorities="br.com.workup.jobup.usuario"
            android:enabled="true"
            android:exported="true" />

    </application>

</manifest>
    <!--android:name="br.com.workup.jobup.configuration.StartApplication"-->