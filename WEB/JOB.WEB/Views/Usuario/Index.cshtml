@model IEnumerable<JOB.WEB.Models.UsuarioViewModel>

@{
    ViewBag.Title = "Usuários";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Usuários</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <table id="tblDados" class="table table-condensed table-responsive table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NOME)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CPF)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RgUF)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RgNR)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DT_NASCIMENTO)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.APROVADO)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ATIVO)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BLOQUEADO)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NOME)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CPF)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RgUF)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RgNR)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DT_NASCIMENTO)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.APROVADO)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ATIVO)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BLOQUEADO)
                        </td>
                        <td>
                            @if (!item.APROVADO)
                            {
                                @Html.ActionLink(" ", "DtAprovar", new { id = item.ID_USUARIO }, new { @class = "fa fa-check-square-o", @title = "Aprovar" })
                            }&nbsp;
                            @if (!item.ATIVO)
                            {
                                @Html.ActionLink(" ", "Ativar", new { id = item.ID_USUARIO }, new { @class = "fa fa-user-plus", @title = "Ativar" })
                            }&nbsp;
                            @if (!item.BLOQUEADO)
                            {
                                @Html.ActionLink(" ", "Bloquear", new { id = item.ID_USUARIO }, new { @class = "fa fa-lock", @title = "Bloquear" })
                            }
                            else
                            {
                                @Html.ActionLink(" ", "Desbloquear", new { id = item.ID_USUARIO }, new { @class = "fa fa-unlock", @title = "Desbloquear" })
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#tblDados').DataTable();
    });
</script>