@model JOB.WEB.Models.PropostaViewModel

@{
    ViewBag.Title = "Serviço";
    ViewBag.SubTitle = "Fazer Proposta";
}

@section Menu {
    @Scripts.Render("~/Scripts/Global/Profissionais/menu")
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Faça aqui uma proposta para este serviço</h3>
        </div>
        <div class="box-body">
            <div class="form-horizontal">

                <div class="form-group">
                    @Html.LabelFor(model => model.VL_PROPOSTA, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.VL_PROPOSTA, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.VL_PROPOSTA, "", new { @class = "text-danger" })
                    </div>
                    @Html.LabelFor(model => model.DURACAO_SERVICO, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.VALOR_DURACAO_SERVICO, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.VALOR_DURACAO_SERVICO, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-2">
                        @Html.EnumDropDownListFor(model => model.DURACAO_SERVICO, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.DURACAO_SERVICO, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.JUSTIFICATIVA, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.JUSTIFICATIVA, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.JUSTIFICATIVA, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="box-footer">
            <input type="submit" value="Salvar" class="btn btn-success" />
            @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-default" })
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/Bundle/AdminLTE/plugins/jquery-validate/js")
}