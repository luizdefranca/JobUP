@model IEnumerable<JOB.WEB.Models.HistoricoMoedaVM>

@{
    ViewBag.Title = "Minhas Moedas";
    ViewBag.SubTitle = "Lista";
}

<div class="box">
    <div class="box-header">
        <h3 class="box-title">Aqui está todas as movimentações das suas moedas</h3>
    </div>
    <div class="box-body">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DT_MOVIMENTACAO)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VALOR_MOVIMENTADO)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MOTIVO)
                </th>               
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DT_MOVIMENTACAO)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VALOR_MOVIMENTADO)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MOTIVO)
                    </td>                   
                </tr>
            }
        </table>
    </div>
</div>